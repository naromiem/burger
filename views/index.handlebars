<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 text-center" id="top-bar">

                    <img src="/assets/img/burger.png" height="200" class="center-block">
                    <h1 class="text-center title">Eat-Da-Burger!</h1>

                    <div class="empty form-group">
                        <form class="empty create-form">
                            <input type="text" id="burger" name="name"
                                placeholder="What would you like?"><br><br>
                            <button class="submit">SUBMIT</button>
                        </form>
                    </div>


                </div>
            </div>

            <br>

            <div class="row justify-content-center">
                <div class="col-md-6">


                <div class="row justify-content-center"></div>
                <h2>"Not Devoured Yet"</h2>
                <br>
                <ul id="notDevoured">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{>burgers/burger-block devoured=0}}
                    {{/unless}}
                    {{/each}}
                </ul>
                
                <div class="row justify-content-center">
                <h2>Devoured!</h2>
                <br>
                <ul id="isDevoured">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{>burgers/burger-block devoured=1}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>

            </div>

            </div>

        </div>

    </div>


</div>